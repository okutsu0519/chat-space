.chat-main

  .main-header
    .main-header__left-box
      %h2.main-header__left-box__current-group
      %ul.main-header__left-box__member-list
        %li.main-header__left-box__member-list__member 
        %li.main-header__left-box__member-list__member 
    
    .main-header__edit-btn
      .main-header__edit-btn__font Edit

  .messages
    .message
      .message__upper-info
        %p.message__upper-info__talker 
        %p.message__upper-info__date 
      .message__text
      
  .form
    .form__new_message
      .form__new_message__inputbox
        %input.form__new_message__inputbox__text{name: "message[content]",placeholder: "  type a message", type:"text"}
        %label{class: "form__new_message__inputbox__image"}
          = icon('fas', 'image')
          %input{type: "file",class: "form__new_message__inputbox__image__file"}
      .form__new_message__submit-btn
        Send
